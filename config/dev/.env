# Development Environment Configuration

# HTTP Configuration
HTTP_HOST=0.0.0.0
HTTP_PORT=8080
HTTP_MODE=debug
HTTP_READ_TIMEOUT=15s
HTTP_WRITE_TIMEOUT=15s
HTTP_IDLE_TIMEOUT=60s

# PostgreSQL Configuration
PG_URL=postgres://postgres:postgres@localhost:5432/go_layout_dev?sslmode=disable
PG_MAX_OPEN_CONNS=25
PG_MAX_IDLE_CONNS=5
PG_CONN_MAX_LIFETIME=5m

# Redis Configuration
REDIS_URL=redis://:@localhost:6379/0
REDIS_POOL_SIZE=10

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=go-layout-tasks

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_me_in_production
JWT_EXPIRATION=24h
JWT_ISSUER=go-layout

# Logging Configuration
LOG_LEVEL=debug
# Available options: json, console
LOG_FORMAT=console
